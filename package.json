{
  "name": "rive-for-vscode",
  "displayName": "Rive for VSCode ",
  "description": "This extension provides a seamless way to preview Rive files directly within the Visual Studio Code (VSCode) editor.",
  "version": "0.0.2",
  "publisher": "BaZz",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "./icon.png",
  "categories": [
    "Visualization",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-bazz/rive-preview-extension"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dev-bazz/rive-preview-extension"
  },
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "rive.rivePreview",
        "displayName": "Rive Preview",
        "selector": [
          {
            "filenamePattern": "*.riv"
          }
        ]
      }
    ],
    "commands": [],
    "languages": [
      {
        "id": "rive",
        "extensions": [
          ".riv",
          ".rev"
        ],
        "icon": {
          "dark": "./assets/rive.svg",
          "light": "./assets/rive.svg"
        }
      }
    ]
  },
  "files.associations": {
    "*.riv": "plaintext"
  },
  "keywords": [
    "rive",
    "preview",
    "riv",
    "visualization",
    "load",
    "file",
    "canvas"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -w -p ./",
    "build": "npm run lint && npm run compile"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/text-encoding-utf-8": "^1.0.2",
    "@types/vscode": "^1.73.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "text-encoding-utf-8": "^1.0.2"
  }
}
